{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"title": {
		"text": "Comparing fire damage of different States",
		"fontSize": 20
	},
	"width": "container",
	"background": "transparent",
	"data": {
		"url": "https://raw.githubusercontent.com/CyuuGit/FIT3179/master/data/table1.csv"
	},
	"layer": [
		{
			"mark": {
				"type": "bar",
				"xOffset": -15,
				"size": 25,
				"color": "DarkRed"
			},
			"encoding": {
				"x": {
					"field": "State",
					"type": "nominal",
					"title": "Jurisdiction"
				},
				"y": {
					"field": "fire_area",
					"type": "quantitative",
					"axis": {
						"title": "Area (10^3 hectares)"
					}
				}
			}
		},
		{
			"mark": {
				"type": "bar",
				"xOffset": 15,
				"size": 25,
				"color": "DarkOliveGreen"
			},
			"encoding": {
				"x": {
					"field": "State",
					"type": "nominal",
					"title": "Jurisdiction"
				},
				"y": {
					"field": "burnt_area",
					"type": "quantitative"
				}
			}
		},
		{
			"mark": {
				"type": "text"
			},
			"data": {
				"values": [
					{
						"name": "Fire Area",
						"legendTitle": "Fire Area"
					},
					{
						"name": "Forest Area within Fire Area",
						"legendTitle": "Forest Area within Fire Area"
					}
				]
			},
			"encoding": {
				"fill": {
					"field": "legendTitle",
					"type": "nominal",
					"scale": {
						"range": [
							"DarkRed",
							"DarkOliveGreen"
						]
					},
					"legend": {
						"title": null,
						"symbolType": "circle",
						"orient": "top-left"
					}
				}
			}
		}
	]
}