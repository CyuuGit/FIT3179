{
        "$schema": "https://vega.github.io/schema/vega-lite/v5.json",     
        "vconcat": [{
                "width": "container",
                "height": "container",
                "layer": [
                        {
                                "data": { 
                                        "url":
                                        "https://raw.githubusercontent.com/CyuuGit/FIT3179/master/data/australia.topojson",
                                        "format": {"type": "topojson", "feature": "Australia"}
                                },
                                "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
                        },
                        {
                                "data": {
                                        "url":
                                                "https://raw.githubusercontent.com/CyuuGit/FIT3179/master/data/fire_data.csv"
                                },
                                "transform": [{"filter": {"param": "time_brush"}}],
                                "mark": {
                                        "type": "circle"
                                },
                                "encoding":{
                                        "longitude": {"field": "longitude", "type": "quantitative"},
                                        "latitude": {"field": "latitude", "type": "quantitative"},
                                        "color": {
                                                "field": "bright_ti4",
                                                "type": "quantitative",
                                                "scale":{
                                                        "type": "threshold",
                                                        "domain":[250, 300, 350],
                                                        "scheme": "reds"
                                                },
                                                "title": "Brightness Temperature of Fire Pixel measured from space in Kelvin "
                                        }
                                }
                                
                        }
                ]
        },
        {  
                "data": {
                        "url":
                                "https://raw.githubusercontent.com/CyuuGit/FIT3179/master/data/fire_data.csv"
                },
                "width": "container",
                "params": [{
                        "name": "time_brush",
                        "select": {"type": "interval", "encodings": ["x"]}
                }],
                "mark": {"type": "line", "color": "black"},             
                "encoding": {
                        "x": {
                                "field": "acq_date",
                                "timeUnit": "yearmonthdate",
                                "title": "Select a range of dates"
                        },
                        "y": {
                                "aggregate": "sum",
                                "field": "acq_date",
                                "title": "Number of Fires Detected",
                                "axis": null
                        }
                }
        }],
        "config": {"legend": {"orient": "top-right", "direction": "horizontal"}}
}

